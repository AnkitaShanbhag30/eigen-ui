{% extends "base.html.j2" %}
{% block content %}
  {% if hero_url %}<div class="hero"><img src="{{ hero_url }}" alt="Hero"/><div class="hero-overlay"></div><div class="hero-text"><h1>{{ outline.headline }}</h1>{% if outline.subhead %}<p>{{ outline.subhead }}</p>{% endif %}</div></div>{% else %}
  <h1>{{ outline.headline }}</h1>{% if outline.subhead %}<p>{{ outline.subhead }}</p>{% endif %}{% endif %}

  {% for s in outline.sections %}
    <div class="card" style="margin-bottom:var(--space-8)">
      <h2>{{ s.title }}</h2>
      <ul>
        {% for b in s.bullets %}<li>{{ b }}</li>{% endfor %}
      </ul>
    </div>
  {% endfor %}
  <p><a class="btn btn-primary" href="#">{{ outline.cta }}</a></p>
{% endblock %}
