{% extends "base.html.j2" %}

{% block content %}
<div class="section">
    {% if not hero_path %}
        <div class="text-center mb-8">
            <h1>{{ outline.headline }}</h1>
            {% if outline.subhead %}
                <h2 class="text-muted">{{ outline.subhead }}</h2>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="grid grid-2">
        {% for section in outline.sections %}
            <div class="card">
                <h3>{{ section.title }}</h3>
                <ul>
                    {% for bullet in section.bullets %}
                        <li>{{ bullet }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
</div>

<div class="section text-center">
    <div class="card">
        <h2>Key Benefits</h2>
        <div class="grid grid-3">
            {% for section in outline.sections[:3] %}
                <div>
                    <h4>{{ section.title }}</h4>
                    <p class="text-muted">{{ section.bullets[0] if section.bullets else '' }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
