{% extends "base.html.j2" %}

{% block content %}
<article class="section">
    {% if not hero_path %}
        <header class="text-center mb-8">
            <h1>{{ outline.headline }}</h1>
            {% if outline.subhead %}
                <h2 class="text-muted">{{ outline.subhead }}</h2>
            {% endif %}
            <div class="text-muted mb-4">
                <time datetime="2024-01-01">January 1, 2024</time>
                {% if outline.meta.tags %}
                    <span class="ml-4">Tags: {{ outline.meta.tags | join(", ") }}</span>
                {% endif %}
            </div>
        </header>
    {% endif %}
    
    {% for section in outline.sections %}
        <div class="card mb-6">
            <h2>{{ section.title }}</h2>
            <ul>
                {% for bullet in section.bullets %}
                    <li>{{ bullet }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
    
    <div class="card mb-6">
        <h3>Key Takeaways</h3>
        <ul>
            {% for section in outline.sections[:3] %}
                {% if section.bullets %}
                    <li><strong>{{ section.title }}:</strong> {{ section.bullets[0] }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</article>

<div class="section text-center">
    <div class="card">
        <h2>What's Next?</h2>
        <p class="mb-4">{{ outline.cta }}</p>
        <div class="grid grid-3">
            <a href="#" class="btn btn-primary">Learn More</a>
            <a href="#" class="btn btn-secondary">Get Started</a>
            <a href="#" class="btn btn-secondary">Contact Us</a>
        </div>
    </div>
</div>

<aside class="section">
    <div class="card">
        <h3>Related Resources</h3>
        <div class="grid grid-2">
            <div>
                <h4>Case Studies</h4>
                <p class="text-muted">Real-world examples of our solutions in action.</p>
            </div>
            <div>
                <h4>Documentation</h4>
                <p class="text-muted">Comprehensive guides and technical resources.</p>
            </div>
        </div>
    </div>
</aside>
{% endblock %}
