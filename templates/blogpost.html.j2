{% extends "base.html.j2" %}
{% block content %}
  <h1>{{ outline.headline }}</h1>
  {% if outline.subhead %}<p>{{ outline.subhead }}</p>{% endif %}
  {% for s in outline.sections %}
    <div class="card" style="margin-bottom:var(--space-8)">
      <h2>{{ s.title }}</h2>
      <ul>{% for b in s.bullets %}<li>{{ b }}</li>{% endfor %}</ul>
    </div>
  {% endfor %}
  <p><a class="btn btn-primary" href="#">{{ outline.cta }}</a></p>
{% endblock %}
